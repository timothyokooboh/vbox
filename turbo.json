{
  "$schema": "https://turbo.build/schema.json",

  "tasks": {
    "lint": {},
    "format": {},
    "format:check": {},
    "test": {
      "inputs": ["src/**/*.vue", "src/**/*.ts"]
    },
    "dev": {},
    "build": {
      "dependsOn": ["^build"]
    },
    "deploy": {
      "dependsOn": ["build", "test", "lint", "format:check"]
    }
  }
}
