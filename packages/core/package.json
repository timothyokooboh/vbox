{
  "name": "@veebox/core",
  "version": "1.1.1",
  "description": "The core package of VBox - a polymorphic Vue.js component with a runtime styling engine.",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "author": {
    "name": "Timothy Okooboh",
    "email": "okoobohtimothy@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/timothyokooboh/vbox.git"
  },
  "type": "module",
  "main": "dist/index.umd.js",
  "module": "dist/index.es.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.es.js",
      "require": "./dist/index.umd.js"
    },
    "./styles/resets.css": "./dist/styles/resets.css"
  },
  "bin": {
    "vbox-type-gen": "dist/cli/cli/generate-types.js"
  },
  "scripts": {
    "build": "vite build && pnpm copy:assets && tsc -p tsconfig.cli.json",
    "copy:assets": "cpx src/styles/resets.css dist/styles/",
    "test": "vitest",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint ."
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^24.10.1",
    "@types/stylis": "^4.2.7",
    "cpx": "^1.5.0",
    "csstype": "^3.2.3",
    "eslint": "^9.39.2",
    "globals": "^16.5.0",
    "jsdom": "^27.2.0",
    "prettier": "^3.7.3",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.50.1",
    "vite": "^7.1.7",
    "vite-plugin-dts": "^4.5.4",
    "vitest": "^4.0.14"
  },
  "volta": {
    "node": "22.14.0"
  },
  "dependencies": {
    "fs-extra": "^11.3.2",
    "jiti": "^2.6.1",
    "stylis": "^4.3.6"
  }
}
